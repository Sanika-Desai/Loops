#include<iostream>
using namespace std;

main()
{
int day;
cout<<"Enter a day number:"<<endl;
cin>>day;
switch(day)
{
    case 1:
    cout<<"Monday:"<<endl;
    break;
    case 2:
    cout<<"Tuesday:"<<endl;
    break;
    case 3:
    cout<<"Wednesday:"<<endl;
    break;
    case 4:
    cout<<"Thurday:"<<endl;
    break;
    case 5:
    cout<<"Friday:"<<endl;
    break;
    case 6:
    cout<<"Saturday:"<<endl;
    break;
    case 7:
    cout<<"Sunday:"<<endl;
     default:
        {
            cout<<"Wrong Input";
            break;
        }

}
}

/*OUTPUT
Enter a day number:
1
Monday:*/
